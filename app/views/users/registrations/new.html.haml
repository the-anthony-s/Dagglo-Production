= content_for :title, "Sign Up"

%section(class="auth")
  %div(class="content")
    %div(class="auth-content")
      %div(class="auth-header")
        %h1(class="text text-l text-medium") Create Account
      %div(class="auth-body")
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form", id: 'invisible-recaptcha-form'}) do |f|
          = render "devise/shared/error_messages", resource: resource
          %div(class="form-row")
            %div(class="form-input")
              = f.text_field :first_name, placeholder: "First name", class: "form-control", autocomplete: "first name"
          %div(class="form-row")
            %div(class="form-input")
              = f.text_field :last_name, placeholder: "Last name", class: "form-control", autocomplete: "last name"
          %div(class="form-row")
            %div(class="form-input")
              = f.email_field :email, placeholder: "Email Address", class: "form-control", autocomplete: "email"
          %div(class="form-row")
            %div(class="form-input")
              = f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "new-password"
          %div(class="form-submit form-submit-center")
            = button_tag "Create account", class: "button button-primary button-wide", data: {disable_with: "<i class='far fa-spinner fa-spin'></i>"}, id: "submit-HelloWorld"
            = invisible_recaptcha_tags ui: :invisible, callback: 'submitInvisibleRecaptchaForm'
          %div(class="form-footer text-center")
            %p(class="text text-s") By creating an account, you agree to our #{link_to "Terms of Service", terms_path, target: :_blank, class: "link"} and have read and understood the #{link_to "Privacy Policy", privacy_path, target: :_blank, class: "link"}
          %div(class="form-actions")
            %ul(class="auth-list")
              = render partial: "users/shared/links"
