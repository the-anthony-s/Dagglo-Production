= content_for :title, "Log In"

%section(class="auth")
  %div(class="content")
    %div(class="auth-content")
      %div(class="auth-header")
        %h1(class="text text-l text-medium") Log into Dagglo
      %div(class="auth-body")
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form"}) do |f|
          = render "devise/shared/error_messages", resource: resource
          %div(class="form-row")
            %div(class="form-input")
              = f.email_field :email, class: "form-control", autocomplete: "email", placeholder: "Email Address"
          %div(class="form-row")
            %div(class="form-input")
              = f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Passwrod"

          %div(class="form-submit form-submit-center")
            = button_tag "Log In", class: "button button-primary button-wide", data: {disable_with: "<i class='far fa-spinner fa-spin'></i>"}
          %div(class="form-actions")
            %ul(class="auth-list")
              = render partial: "users/shared/links"




