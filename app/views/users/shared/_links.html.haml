- if controller_name != 'sessions'
  %li(class="auth-list-item")
    %p(class="text text-s") Already a member? #{link_to "Log in", new_session_path(resource_name), class: "link"}


- if devise_mapping.registerable? && controller_name != 'registrations'
  %li(class="auth-list-item")
    %p(class="text text-s") Not a member? #{link_to "Sign up", new_registration_path(resource_name), class: "link"}


- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %li(class="auth-list-item")
    %p(class="text text-s") #{link_to "Forgot password?", new_password_path(resource_name), class: "link"}


- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %li(class="auth-list-item")
    = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link"


- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %li(class="auth-list-item")
    = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "link"


- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    %li(class="auth-list-item")
      = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "link"
