= content_for :title, "Change passowrd"

%section(class="auth")
  %div(class="content")
    %div(class="auth-content")
      %div(class="auth-header")
        %h1(class="text text-xxl text-bold") Change password
      %div(class="auth-body")
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f|
          = render "devise/shared/error_messages", resource: resource
          %div(class="form-row")
            %div(class="form-label")
              = f.label :password, "New password"
            %div(class="form-form")
              = f.hidden_field :reset_password_token
              = f.password_field :password, placeholder: "#{@minimum_password_length}+ characters", class: "form-control", autocomplete: "new-password"
          
          %div(class="form-submit form-submit-center")
            = button_tag "Continue", class: "button button-action button-primary button-responsive", data: {disable_with: "<i class='far fa-spinner fa-spin' style='margin-right: 6px;'></i> Changing.."}
          %div(class="form-actions")
            %ul(class="auth-list")
              = render partial: "users/shared/links"