- time = Time.current
- time.in_time_zone("EST")
%section(class="section section-page")
    %div(class="content-page")
        %div(class="section-header section-header-center")
            %div(class="section-header-title")
                %h1(class="text text-xl text-bold") Talk to us
            %div(class="section-header-caption")
                %p(class="text text-l") We like strangers.
            %div(class="section-header-actions")
                %div(class="section-header-actions-item")
                    = link_to "Get In Touch", new_contact_path, class: "button button-primary-outline"
        %div(class="section-body")
            %div(class="testimonial")
                %div(class="testimonial-container")
                    %div(class="testimonial-icon")
                        = icon "fal", "globe-americas"
                    %div(class="testimonial-header")
                        %h1(class="text text-xl text-bold") Toronto
                        %div(class="clock")
                            %div(class="clock-timer")
                                %span(class="clock-timer-hour") #{time.strftime("%I")}
                                %span(class="clock-timer-column") :
                                %span(class="clock-timer-minutes") #{time.strftime("%M")}
                                %span(class="clock-timer-meridian") #{time.strftime("%p")}
                    %div(class="testimonial-body")
                        %p(class="text text-s") Monday-Friday 9:00 a.m. to 6:00 p.m.
                    %div(class="testimonial-actions")
                        - if (time.in_time_zone("EST").hour >= 9 && time.in_time_zone("EST").hour <= 18) && time.on_weekday?
                            %div(class="testimonial-actions-item")
                                %p(class="text text-m") +1 (289) 259 - 3488
                        - else
                            %div(class="testimonial-actions-item")
                                %p(class="text text-s text-secondary text-medium") Office closed
                        %div(class="testimonial-actions-item")
                            = mail_to "help@dagglo.com", "help@dagglo.com", class: "link"



