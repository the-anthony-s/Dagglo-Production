= content_for :title, "Resend confirmation"

%section(class="auth")
  %div(class="content")
    %div(class="auth-content")
      %div(class="auth-header")
        %h1(class="text text-xxl text-bold") Resend confirmation instructions
        %p(class="text text-s space-top-xs") Enter the email address you used when you joined and weâ€™ll send you instructions to confirm your account again.
      %div(class="auth-body")
        = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form" }) do |f|
          = render "devise/shared/error_messages", resource: resource
          %div(class="form-row")
            %div(class="form-label")
              = f.label :email, "Email"
            %div(class="form-form")
              = f.email_field :email, class: "form-control", autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
          %div(class="form-submit form-submit-center")
            = button_tag "Continue", class: "button button-action button-primary button-responsive", data: {disable_with: "<i class='far fa-spinner fa-spin' style='margin-right: 6px;'></i> Resending email.."}
          %div(class="form-actions")
            %ul(class="auth-list")
              = render partial: "users/shared/links"
