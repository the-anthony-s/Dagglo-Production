= content_for :title, "Forgot Password?"

%section(class="auth")
  %div(class="content")
    %div(class="auth-content")
      %div(class="auth-header")
        %h1(class="text text-l text-medium") Forgot Password?
        %p(class="text text-s space-top-xs") Enter the email address you registered with and we'll send you instructions to reset your password.
      %div(class="auth-body")
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f|
          = render "devise/shared/error_messages", resource: resource
          %div(class="form-row")
            %div(class="form-form")
              = f.email_field :email, class: "form-control", autocomplete: "email", placeholder: "Email Address"
          %div(class="form-submit form-submit-center")
            = button_tag "Send Instructions", class: "button button-primary button-wide", data: {disable_with: "<i class='far fa-spinner fa-spin'></i>"}
          %div(class="form-actions")
            %ul(class="auth-list")
              = render partial: "users/shared/links"
