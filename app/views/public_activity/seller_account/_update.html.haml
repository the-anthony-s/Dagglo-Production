- if activity.trackable
  %li(class="activity")
    %div(class="activity-container")
      %div(class="activity-icon")
        %div(class="activity-icon-main")
          = image_tag activity.trackable.user.avatar(300, 300), 'data-src': activity.trackable.user.avatar(300, 300), class: "lazy", loading: "lazy"
        %div(class="activity-icon-action activity-icon-action-update")
          = icon "far", "user-edit"
      %div(class="activity-body")
        %div(class="activity-body-desc")
          %p(class="text text-s") 
            = link_to activity.owner.full_name, activity.owner.s_account.present? ? account_path(activity.owner.seller_account) : settings_account_seller_path, class: "link"
            updated
            = link_to activity.trackable.user.full_name || activity.trackable.user.email, activity.trackable.user.s_account.present? ? account_path(activity.trackable) : settings_account_seller_path, class: "link"
        %div(class="activity-body-time")
          %p(class="text text-xs text-secondary")
            = time_ago_in_words(activity.created_at).capitalize
            ago