- if activity.trackable
  %li(class="activity")
    %div(class="activity-container")
      %div(class="activity-icon")
        %div(class="activity-icon-main")
          = image_tag activity.trackable.logo(200, 200), 'data-src': activity.trackable.logo(200, 200), class: "lazy", loading: "lazy"
        %div(class="activity-icon-action activity-icon-action-update")
          = icon "far", "sync"
      %div(class="activity-body")
        %div(class="activity-body-desc")
          %p(class="text text-s") 
            = link_to activity.owner.full_name, account_path(activity.owner.seller_account), class: "link"
            updated
            = link_to activity.trackable.name, show_seller_path(activity.trackable), target: :_blank, class: "link"
        %div(class="activity-body-time")
          %p(class="text text-xs text-secondary")
            = time_ago_in_words(activity.created_at).capitalize
            ago




